<h1>Edit task</h1>

<%= form_for(@record) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder:"New title"%><br><br>
  <%= f.label :details %><br>
  <%= f.text_area :details, size: "70x5", placeholder: "Description of task"  %><br><br>
  <%= f.label :completed %><br>
  <%= f.check_box :completed %><br><br>
  <%= f.submit "Save", class:"button-primary"  %><br>
<% end %>
<div class="divider">
  <%= link_to 'Back to list', '/tasks' %>
</div>
